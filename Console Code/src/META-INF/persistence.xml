<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="WRVMPersistenceUnit" transaction-type="RESOURCE_LOCAL">


        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>


        <properties>
            <property name="hibernate.archive.autodetection" value="class, hbm"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MariaDBDialect"/>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost/sajani_2018075?serverTimezone=UTC"/>
            <property name="connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.username" value="root"/>


            <!-- DB schema will be updated if needed -->
            <!-- <property name="hibernate.hbm2ddl.auto">update</property> -->

            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <!-- without below table was not created -->
            <property name="javax.persistence.schema-generation.database.action" value="update" />

        </properties>

    </persistence-unit>

</persistence>